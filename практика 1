    task14();
    task15();

    printf("\nЗадачи на массивы:\n");
    task16();
    task17();
    task18();
    task19();
    task20();

    printf("\nЗадачи на функции:\n");
    task21();
    task22();
    task23();
    task24();
    task25();

    return 0;
}
